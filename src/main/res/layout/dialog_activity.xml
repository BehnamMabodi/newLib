<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/main_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:transitionName="@string/trans_name_dialog"
        app:cardElevation="24dp"
        tools:context="ir.newway.rakatshomar.Activities.ZekrView.ZekrDialogs.DialogSelectDays">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:minHeight="@dimen/dialog_activity_min_height"
            android:minWidth="@dimen/dialog_activity_min_width"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/list_item_padding_horizontal_material"
            android:paddingRight="@dimen/list_item_padding_horizontal_material">

            <com.newway.newlib.design.widget.view.TextViewStyleable
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/main_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dialog_activity_min_height"
                android:minWidth="@dimen/dialog_activity_min_width">

            </FrameLayout>


            <Button
                android:id="@+id/btn_ok"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:text="@string/OK"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
